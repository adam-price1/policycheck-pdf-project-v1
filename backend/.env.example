# Environment
ENVIRONMENT=production

# Database
DATABASE_URL=mysql+pymysql://policycheck:CHANGE_ME@db:3306/policycheck
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Security (CRITICAL - Generate secure values)
SECRET_KEY=CHANGE_ME_TO_RANDOM_STRING_AT_LEAST_32_CHARS
ACCESS_TOKEN_EXPIRE_MINUTES=1440
DOWNLOAD_TOKEN_EXPIRE_MINUTES=5

# CORS (adjust for your domain)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Crawl Settings
MAX_CONCURRENT_CRAWLS=3
MAX_PAGES_DEFAULT=1000
MAX_PAGES_ABSOLUTE=10000
MAX_MINUTES_DEFAULT=60
MAX_MINUTES_ABSOLUTE=180
REQUEST_DELAY=0.5
CRAWL_TIMEOUT=10
CRAWL_MAX_RETRIES=3

# File Handling
MAX_FILE_SIZE_MB=50
CHUNK_SIZE=8192
MAX_DOWNLOAD_TIME=300

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_CRAWL_START=5
RATE_LIMIT_DELAY_MIN=0.5
RATE_LIMIT_DELAY_MAX=2.0

# Logging
LOG_LEVEL=INFO
LOG_JSON_FORMAT=false

# Monitoring
METRICS_ENABLED=false
METRICS_PORT=9090
